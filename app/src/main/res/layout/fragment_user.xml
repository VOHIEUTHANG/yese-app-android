<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.UserFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="200dp"
            android:layout_marginVertical="10dp"
            >
            <ImageView
                android:id="@+id/ivUserAvatar"
                android:src="@drawable/user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            >
            <ImageView

                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_volume"
                android:scaleType="centerCrop"
                />

            <SeekBar
                android:id="@+id/sbAdjustVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="18dp"
                android:textColor="@color/text_color"
                android:textAlignment="center"
                />
            <EditText
                android:id="@+id/edUsername"
                android:editable="false"
                android:text="devostack2k"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="18dp"
                android:textColor="@color/text_color"
                android:textAlignment="center"

                />
            <EditText
                android:id="@+id/edDisplayName"
                android:text="Thang Vo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/custom_input"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="18dp"
                android:textColor="@color/text_color"
                android:textAlignment="center"

                />
            <EditText
                android:id="@+id/edUserEmail"
                android:text="hieuthang369@gmail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/custom_input"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btnUpdateUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingVertical="12dp"
            android:background="@drawable/button_rounded_full"
            android:textColor="@color/white"
            android:text="Update User"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingVertical="12dp"
            android:background="@drawable/button_custom_white"
            android:textColor="@color/danger"
            android:text="Logout"
            />




    </LinearLayout>

</FrameLayout>