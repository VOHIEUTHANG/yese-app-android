<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginBottom="12dp"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cvWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#F5FCFC"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:minHeight="100dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/ivPackageIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_check"
                android:scaleType="centerCrop"
                android:padding="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingVertical="10dp"
                android:layout_marginLeft="6dp"
                >
                <TextView
                    android:id="@+id/tvPackageTopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cơ bản"
                    android:textSize="24dp"
                    />
                <TextView
                    android:id="@+id/tvPackageQuestionCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="0/8 questions"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivPackageFinish"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/ivPackageStatusIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_lock"
                android:scaleType="centerCrop"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>