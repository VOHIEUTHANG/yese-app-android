<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Router.Home.Fragments.Home_QuestionType4Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/ivAddToNote"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="4dp"
            android:src="@drawable/ic_home_add_to_note"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
           >

            <RadioGroup
                android:id="@+id/rgT4KeyAnswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <RadioButton
                    android:id="@+id/rbT4Key1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_radio_custom"
                    android:button="@null"
                    android:paddingVertical="16dp"
                    android:text="grass"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color_light"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rbT4Key2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_radio_custom"
                    android:button="@null"
                    android:paddingVertical="16dp"
                    android:text="dress"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color_light"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rbT4Key3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_radio_custom"
                    android:button="@null"
                    android:paddingVertical="16dp"
                    android:text="flag"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color_light"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RadioGroup>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>